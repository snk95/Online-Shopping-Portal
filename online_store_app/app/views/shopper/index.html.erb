<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Product Catalog</h1>




<% if @products.blank? && !params[:term].blank? %>
  <h4>There are no products containing the term "<%= params[:term] %>".</h4>
<% else %>
<% @products.each do |product| %>
<div class="entry">
  <%= image_tag(product.image) %>
  <h3><%= product.name %></h3>
  <h3><%= sanitize(product.description) %></h3>
  <div class="price_line">
    <span class="price"><%= number_to_currency(product.price) %></span>
    <!-- class is not necessary, but to show how to add class -->
    <%= button_to 'Add to Cart', lineitems_path(product_id: product), class: 'add_to_cart', remote: true %>
  </div>
</div>
<% end %>
<% end %>

